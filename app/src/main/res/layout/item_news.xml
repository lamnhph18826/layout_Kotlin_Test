<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/itemNews_news"
    android:layout_height="305sp"
    android:layout_margin="3sp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        app:cardCornerRadius="22sp"
        app:cardElevation="1sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f1f5">
            <ImageView
                android:id="@+id/itemNews_img"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:scaleType="centerCrop"
                android:src="@color/color_DA"/>

            <TextView
                android:id="@+id/itemNews_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12sp"
                android:layout_marginLeft="12sp"
                android:layout_below="@+id/itemNews_img"
                android:text="01:02 28/10/2000"
                android:maxLength="30"
                android:textColor="@color/black"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/itemNews_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_below="@+id/itemNews_date"
                android:maxLength="20"
                android:text="androidx.cardview.widget.CardView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/itemNews_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemNews_title"
                android:layout_marginLeft="12sp"
                android:text="abc"
                android:maxLength="50"
                android:textColor="#919294"
                android:textSize="15sp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>