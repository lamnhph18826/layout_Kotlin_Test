<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NHOM6_DATN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonLogin" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/boder_button</item>
    </style>

    <style name="title_tab" >
        <item name="android:textColor">@color/color_DA</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="message" >
        <item name="android:textColor">@color/color_DA</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>